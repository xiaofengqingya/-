/**index.wxss**/
swiper {
    display:block;
    height:326rpx;
}

.slide-image{
    width:100%;
    height:326rpx;
}

.category{
    background:#fff;
    padding:40rpx 0;
    border-bottom:2rpx solid #eaeaea;
}

.category ul li{
    float:left;
    width:25%;
    text-align:center;
    margin:0 auto;
}
.category ul li image{
    width:100rpx;
    height:100rpx;
}
.category-name{
    display:block;
    font-size:28rpx;
}

.pro{
  background:#fff;
  text-align: center;  
  padding-bottom: 40rpx;
  border-bottom:2rpx solid #eaeaea;
}
.pro-con{
  flex-wrap: wrap;
  display: flex;
  justify-content: space-between;
  margin: 0 40rpx;
}
.pro-con-list{
  width: 47%;
  text-align: center;
}
.pro-con-list image{
  width: 309rpx;
  height: 299rpx;
}
.pro-con-list text{
  position: relative;
  top:-60rpx;
  margin: 0 auto;
  width: 96%;
  display: block;
  font-size: 26rpx;
}
.more{
  margin: 0 40rpx;
}

.case{
  background:#fff;
  text-align: center;  
  padding-bottom: 40rpx;
  border-bottom:2rpx solid #eaeaea;
}
.case-con{
  flex-wrap: wrap;
  display: flex;
  justify-content: space-between;
  margin: 0 40rpx;
}
.case-con-list{
  width: 47%;
  text-align: center;
  padding-bottom: 40rpx;
}
.case-con-list image{
  width: 303rpx;
  height: 234rpx;
  box-shadow:-1px 3px 3px #999;
}
.case-con-list-title{
  font-size: 28rpx;
  text-align: left;
}
.case-con-list-subtitle{
  font-size: 26rpx;
  text-align: left;
}

.about-con{
 
  background:#fff;
  text-align: center;  
  
  border-bottom:2rpx solid #eaeaea;
}
.about-con text{
  font-size:26rpx;
  display: block;
  text-align: left;
  line-height: 45rpx;
}

.ly-con{
  padding: 0 100rpx;
  background:#fff;
  text-align: center;  
  padding-bottom: 40rpx;
  border-bottom:2rpx solid #eaeaea;
}
.user{
  display: flex;
  border: 2rpx solid #eaeaea;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 30rpx;
}
.user image{
  width: 45rpx;
  height: 50rpx;
  padding: 0 20rpx;
}
.user input{
  text-align: left;
}
.radio{
  padding: 30rpx 0;
  justify-content: space-around;
  display: flex;
  font-size: 30rpx;
}

.phone{
  display: flex;
  border: 2rpx solid #eaeaea;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 30rpx;
}
.phone image{
  width: 45rpx;
  height: 50rpx;
  padding: 0 20rpx;
}
.phone input{
  text-align: left;
}
.textarea{
  text-align: left;
  padding: 20rpx 30rpx;
  margin: 30rpx 0;
  height: 200rpx;
  border: 2rpx solid #eaeaea;
  border-radius: 8rpx;
  font-size: 30rpx;
}
.textarea textarea{
  width: 100%;
}
